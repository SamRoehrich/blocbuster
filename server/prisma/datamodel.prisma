enum UserLevel {
    FREE
    ADMIN
    COACH
    PAID
    ATHLETE
}

type User {
    id: ID! @id
    userName: String!
    fullName: String!
    name: String!
    email: String! @unique
    password: String!
    city: String!
    state: String!
    homeGym: String!
    logBook: [LogItem!]
    userClimbingStats: [UserClimbingStats!]
    posts: [Post]
    userLevel: UserLevel!
    phase: String
    schedule: [Workout!]
}

type LogItem {
    user: User!
    id: ID! @id
    createdAt: DateTime! @createdAt
    title: String!
    description: String!
    comment: String
}

type UserClimbingStats {
    id: ID! @id
    user: User! @relation(link: INLINE)
    createdAt: DateTime! @createdAt
    apeIndex: Int!
    height: Int!
    weight: Int!
    maxVGrade: Int!
    maxSportGrade: String!
    maxEdgeLoad: Int!
    maxEdgeTestSize: Int!
    SWREdge: Float
    maxPullLoad: Int!
    SWRBar: Float
    oneArmHangLoadLeft: Int!
    oneArmHangLoadRight: Int!
    oneArmHangSWR: Float!
    goalVGrade: Int!
    goalSportGrade: String!
}

type Post {
    id: ID! @id
    user: User!
    title: String!
    content: String!
    comments: [Comment!]
}

type Comment {
    id: ID! @id
    post: Post!
    user: User!
    content: String!
}

type Workout {
    id: ID! @id
    author: String!
    title: String!
    description: String!
}