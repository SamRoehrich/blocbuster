type Athlete {
    id: ID! @id
    fullName: String! @unique
    email: String! @unique
    password: String!
    DOB: String
    createdAt: DateTime! @createdAt
    team: Team
    subTeam: SubTeam
    parents: [Parent!]
    athleteStats: AthleteStats @relation(link: TABLE, name: "AthleteOnStats")
    athleteSchedule: AthleteSchedule @relation(link: INLINE, name:"AthleteOnSchedule")
    logBook: [LogItem!]
    phase: String
}

type HeadCoach {
    id: ID! @id
    fullName: String!
    email: String! @unique
    password: String!
    createdAt: DateTime! @createdAt
    team: Team @relation(name: "HeadCoachToTeam")
    subTeams: [SubTeam!] @relation(name: "HeadCoachToSubTeam")
}

type Coach {
    id: ID! @id
    fullName: String!
    email: String! @unique
    password: String!
    createdAt: DateTime! @createdAt
    team: Team @relation(name: "CoachToTeam")
    subTeams: [SubTeam!] @relation(name: "CoachToSubTeam")
}

type Parent {
    id: ID! @id
    fullName: String!
    email: String!
    password: String!
    phoneNumber: String!
    team: Team!
    athlete: Athlete
}

type Team {
    id: ID! @id
    teamName: String! @unique
    headCoach: HeadCoach @relation(name: "HeadCoachToTeam" link: INLINE)
    athletes: [Athlete!] @relation(link: TABLE)
    coaches: [Coach!] @relation(name: "CoachToTeam" link: TABLE)
    subTeams: [SubTeam!]
    library: [Workout!]
    posts: [Post!]
    schedule: TeamSchedule @relation(link: INLINE)
    phase: String
    city: String!
    state: String!
    homeGym: String!
    teamKey: String
    coachKey: String
}

type SubTeam {
    id: ID! @id
    subTeamName: String!
    subTeamSchedule: TeamSchedule
    parentTeam: Team!
    athletes: [Athlete!]
    coaches: [Coach!] @relation(name: "CoachToSubTeam")
    headCoach: HeadCoach! @relation(name: "HeadCoachToSubTeam")
    library: [Workout!]
    posts: [Post!]
}

type TeamSchedule {
    id: ID! @id
    createdBy: Coach
    createdAt: DateTime! @createdAt
    team: Team
    athletes: [Athlete!]
    library: [Workout!]
}

type AthleteSchedule {
    id: ID! @id
    createdBy: Coach! 
    createdAt: DateTime! @createdAt
    library: [Workout!]
    athlete: Athlete! @relation(name: "AthleteOnSchedule")
}

type Workout {
    id: ID! @id
    author: String!
    title: String!
    description: String!
}

type LogItem {
    athlete: Athlete!
    id: ID! @id
    createdAt: DateTime! @createdAt
    title: String!
    description: String!
    results: Result!
    comment: String
}

type Result {
    id: ID! @id
    rpe: Int
    compResult: Int
    sessionResult: String
    athlete: Athlete!
}

type AthleteStats {
    id: ID! @id
    athlete: Athlete! @relation(name: "AthleteOnStats")
    createdAt: DateTime! @createdAt
    createdBy: Coach
    apeIndex: Int!
    height: Int!
    weight: Int!
    maxVGrade: Int!
    maxSportGrade: String!
    maxEdgeLoad: Int!
    maxEdgeTestSize: Int!
    SWREdge: Float
    maxPullLoad: Int!
    SWRBar: Float
    oneArmHangLoadLeft: Int!
    oneArmHangLoadRight: Int!
    oneArmHangSWR: Float
    goalVGrade: Int!
    goalSportGrade: String!
}

type Post {
    id: ID! @id
    postedBy: Coach!
    title: String!
    content: String!
    comments: [Comment!]
}

type Comment {
    id: ID! @id
    post: Post!
    coach: Coach
    athlete: Athlete
    content: String!
}
