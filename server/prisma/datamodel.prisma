type Team {
    id: ID! @id
    teamName: String!
    headCoach: HeadCoach @relation (link: TABLE)
    athletes: [Athlete!]
    coahces: [Coach!] 
    subTeams: [SubTeam!]
    library: [Workout!]
    posts: [Post!]
    schedule: Schedule @relation(link: TABLE)
    phase: String
    city: String!
    state: String!
    homeGym: String!
    teamKey: String
    coachKey: String
}

type Schedule {
    id: ID! @id
    createdBy: Coach
    createdAt: DateTime! @createdAt
    team: Team
    athletes: [Athlete!]
}

type SubTeam {
    id: ID! @id
    headCoach: HeadCoach! 
    ahtletes: [Athlete!]
    coahces: [Coach!]
    library: [Workout!]
    posts: [Post!]
}

type HeadCoach {
    id: ID! @id
    team: Team 
    fullName: String!
    email: String!
    password: String!
    teamKey: String!
    coachKey: String!
}

type Coach {
    id: ID! @id
    fullName: String!
    team: Team 
    teams: [SubTeam!]
    email: String! @unique
    password: String!
    teamKey: String!
    coachKey: String!
}

type Athlete {
    id: ID! @id
    fullName: String!
    email: String! @unique
    password: String!
    stats: [AthleteStats!]
    parents: [Parent!]!
    team: Team
    teamKey: String!
    library: [Workout!]
    logBook: [LogItem!]
    phase: String
}

type Parent {
    id: ID! @id
    athlete: [Athlete!] 
    email: String!
    password: String!
    phoneNumber: String!
}

type LogItem {
    user: Athlete!
    id: ID! @id
    createdAt: DateTime! @createdAt
    title: String!
    description: String!
    results: Result!
    comment: String
}

type Result {
    id: ID! @id
    rpe: Int
    compResult: Int
    sessionResult: String
    athlete: Athlete!
}

type AthleteStats {
    id: ID! @id
    user: Athlete!
    createdAt: DateTime! @createdAt
    apeIndex: Int!
    height: Int!
    weight: Int!
    maxVGrade: Int!
    maxSportGrade: String!
    maxEdgeLoad: Int!
    maxEdgeTestSize: Int!
    SWREdge: Float
    maxPullLoad: Int!
    SWRBar: Float
    oneArmHangLoadLeft: Int!
    oneArmHangLoadRight: Int!
    oneArmHangSWR: Float!
    goalVGrade: Int!
    goalSportGrade: String!
}

type Post {
    id: ID! @id
    coach: Coach!
    title: String!
    content: String!
    comments: [Comment!]
}

type Comment {
    id: ID! @id
    post: Post!
    coach: Coach
    athlete: Athlete
    content: String!
}

type Workout {
    id: ID! @id
    author: String!
    title: String!
    description: String!
}